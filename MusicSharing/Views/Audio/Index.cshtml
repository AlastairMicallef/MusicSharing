@model IEnumerable<Common.Audio>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Audio Name
        </th>
        <th>
            Audio Link
        </th>
        <th>
            User
        </th>
        <th>
           Genre Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.audioname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.audioURL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.genreID)

        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.audioID }) |
            @Html.ActionLink("Details", "Details", new { id=item.audioID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.audioID })
        </td>
    </tr>
}

</table>
